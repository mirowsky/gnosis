{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@workspace/stylesheet": ["src/theme/stylesheet.ts"],
      "@workspace/utility": ["src/utility/index.ts"],
      "@workspace/types": ["./types.ts"],
      "@workspace/images": ["./public/images"],
      "@workspace/jss-mixins": ["src/mixins/index.ts"],
      "@workspace/components/utility": ["src/components/Utility/index.ts"],
      "@workspace/svg": ["src/svg/index.ts"],
      "@workspace/animations": ["src/components/animations/index.ts"],
      "@workspace/components/common": ["src/components/Common/index.ts"],
      "@workspace/hooks": ["src/hooks/index.ts"],
      "@workspace/components/pages": ["src/components/Pages/index.ts"],
      "@workspace/components/layouts": ["src/components/Layout/index.ts"],
      "@workspace/contants": ["src/constants/index.ts"],
      "@workspace/services": ["src/services/index.ts"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "global.d.ts",
    "augmentation.d.ts",
  ],
  "exclude": ["node_modules"]
}

{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@workspace/stylesheet": ["./theme/stylesheet.ts"],
      "@workspace/utility": ["./utility/index.ts"],
      "@workspace/types": ["./types.ts"],
      "@workspace/images": ["./public/images"],
      "@workspace/jss-mixins": ["./mixins/index.ts"],
      "@workspace/components/utility": ["./components/Utility/index.ts"],
      "@workspace/svg": ["./svg/index.ts"],
      "@workspace/animations": ["./animations/index.ts"],
      "@workspace/components/common": ["./components/Common/index.ts"],
      "@workspace/hooks": ["./hooks/index.ts"],
      "@workspace/components/pages": ["./components/Pages/index.ts"],
      "@workspace/components/layouts": ["./components/Layout/index.ts"],
      "@workspace/contants": ["constants/index.ts"],
      "@workspace/services": ["./services/index.ts"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "global.d.ts",
    "augmentation.d.ts",
  ],
  "exclude": ["node_modules"]
}

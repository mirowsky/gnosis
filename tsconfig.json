{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@workspace/features": ["src/features/index.ts"],
      "@workspace/stylesheet": ["src/theme/stylesheet.ts"],
      "@workspace/utility": ["src/utility/index.ts"],
      "@workspace/components/shared": ["src/features/shared/index.ts"],
      "@workspace/types": ["./types.ts"],
      "@workspace/images": ["./public/images"],
      "@workspace/hooks": ["src/hooks/index.ts"],
      "@workspace/constants": ["src/constants/index.ts"],
      "@workspace/services": ["src/services/index.ts"]
    }
  },

  "include": [
    "jest.setup.ks",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "global.d.ts",
    "augmentation.d.ts"
  ],
  "exclude": ["node_modules"]
}

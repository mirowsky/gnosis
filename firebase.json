{
  "hosting": [
    {
      "target": "micro",
      "cleanUrls": true,
      "public": "out",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"]
    },
    {
      "target": "dev",
      "cleanUrls": true,
      "public": "out",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "headers": [
        {
          "source": "**/*.@(js)",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "max-age=2592000"
            }
          ]
        },
        {
          "source": "**/*.@(eot|otf|ttf|ttc|woff|font.css)",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "max-age=2592000"
            }
          ]
        },
        {
          "source": "**/*.@(jpg|jpeg|gif|png|webp)",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "max-age=2592000"
            }
          ]
        }
      ]
    },
    {
      "target": "storybook",
      "public": "storybook-static",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "cleanUrls": true,
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    }
  ]
}
